@model List<RepositoryDesignPattern.EntityLayer.Concrete.Category>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@category.CategoryID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@category.CategoryID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>
</div>
